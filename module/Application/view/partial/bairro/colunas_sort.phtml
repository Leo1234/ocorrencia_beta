<?php
$estruturaColuna = function($label, $coluna_bairro) {
    $html = '';
    $html .= "<a href='{$this->url('bairro', ['action' => 'index'], ['query' => ['pagina' => $this->pagina_atual, 'coluna_bairro' => $coluna_bairro, 'coluna_sort' => ($this->coluna_bairro!= $coluna_bairro? 'ASC' : ($this->coluna_sort == 'DESC' ? 'ASC' : 'DESC')), 'itens_pagina' => $this->itens_pagina, 'search' => $this->search]])}'>";

    if ($this->coluna_bairro == $coluna_bairro) {
        $icon = $this->coluna_sort == 'ASC' ? '' : '-alt';
        $html .= "<span class='glyphicon glyphicon-sort-by-attributes{$icon}'></span> ";
    }

    $html .= $label;

    return $html;
};
?>
<tr>
    <th>
        <?php echo $estruturaColuna('Nº Registro', 'id_bai'); ?>
    </th>
    <th>
        <?php echo $estruturaColuna('Bairro', 'bairro'); ?>
    </th> 
    <th>
        <?php echo $estruturaColuna('Área', 'area'); ?>
    </th> 
    <th>
        <?php echo $estruturaColuna('Município', 'municipio'); ?>
    </th>
    <th>Ação</th>  
</tr>
